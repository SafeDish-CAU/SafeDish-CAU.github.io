{
  "openapi": "3.0.0",
  "info": {
    "title": "Recommendation API",
    "version": "1.0.0",
    "description": "API 문서: 사용자, 태그, 아이템 CRUD 및 아이템/유저 기반 추천 기능을 제공합니다."
  },
  "paths": {
    "/diner/{diner_id}/menu": {
      "get": {
        "summary": "음식점 메뉴 조회",
        "parameters": [
          {
            "name": "diner_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "조회할 음식점의 UID"
          }
        ],
        "responses": {
          "200": {
            "description": "추천된 아이템 ID 리스트",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DinerMenuResponse"
                }
              }
            }
          },
          "404": {
            "description": "해당 음식점이 존재하지 않음"
          }
        }
      }
    },
    "/recommend_user/{user_id}": {
      "get": {
        "summary": "유저 기반 추천",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "추천 대상 유저의 ID"
          },
          {
            "name": "top_n",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 5
            },
            "description": "반환할 추천 아이템 개수 (기본값: 5)"
          }
        ],
        "responses": {
          "200": {
            "description": "추천된 아이템 ID 리스트",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RecommendResponse"
                }
              }
            }
          },
          "404": {
            "description": "대상 유저를 찾을 수 없음",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DinerMenuResponse": {

      },
      "ItemCreateRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "아이템의 고유 ID"
          },
          "title": {
            "type": "string",
            "description": "아이템 제목"
          },
          "text": {
            "type": "string",
            "description": "아이템 본문 텍스트"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "description": "아이템에 연결된 태그 ID 목록 (빈 배열 허용)"
          }
        },
        "required": [
          "id",
          "title",
          "text"
        ],
        "example": {
          "id": 123,
          "title": "예시 작품 제목",
          "text": "이 작품의 내용이 들어갑니다.",
          "tags": [
            1,
            2,
            5
          ]
        }
      }
    }
  }
}