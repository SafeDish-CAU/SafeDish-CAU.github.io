{
  "openapi": "3.0.1",
  "info": {
    "title": "SafeDish Backend API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/",
      "description": "Default server"
    }
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "Owner 로그인",
        "operationId": "loginOwner",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginOwnerRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginOwnerResponse"
                }
              }
            }
          },
          "401": {
            "description": "이메일 또는 비밀번호 불일치"
          }
        }
      }
    },

    "/api/owner": {
      "post": {
        "summary": "Owner 회원가입",
        "operationId": "createOwner",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOwnerRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "회원가입 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateOwnerResponse"
                }
              }
            }
          },
          "409": {
            "description": "이미 존재하는 이메일 등"
          }
        }
      }
    },

    "/api/store": {
      "post": {
        "summary": "가게 생성",
        "operationId": "createStore",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateStoreRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "가게 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateStoreResponse"
                }
              }
            }
          },
          "401": {
            "description": "토큰 인증 실패"
          }
        }
      }
    },

    "/api/store/{storeId}": {
      "get": {
        "summary": "가게 상세 조회",
        "operationId": "readStore",
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "가게 상세 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Store"
                }
              }
            }
          },
          "404": {
            "description": "존재하지 않는 가게"
          }
        }
      }
    },

    "/api/menu": {
      "post": {
        "summary": "메뉴 생성",
        "operationId": "createMenu",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMenuRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "메뉴 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateMenuResponse"
                }
              }
            }
          },
          "401": {
            "description": "토큰 인증 실패"
          }
        }
      }
    },

    "/api/menu/{menuId}": {
      "get": {
        "summary": "메뉴 상세 조회",
        "operationId": "readMenu",
        "parameters": [
          {
            "name": "menuId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "메뉴 상세 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Menu"
                }
              }
            }
          },
          "404": {
            "description": "존재하지 않는 메뉴"
          }
        }
      }
    },

    "/api/option": {
      "post": {
        "summary": "옵션 그룹 생성",
        "operationId": "createOptionGroup",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOptionGroupRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "옵션 그룹 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateOptionGroupResponse"
                }
              }
            }
          },
          "401": {
            "description": "토큰 인증 실패"
          }
        }
      }
    },

    "/api/option/{groupId}/item": {
      "post": {
        "summary": "옵션 아이템 생성",
        "operationId": "createOptionItem",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "groupId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOptionItemRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "옵션 아이템 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateOptionItemResponse"
                }
              }
            }
          },
          "401": {
            "description": "토큰 인증 실패"
          }
        }
      }
    },

    "/api/platform": {
      "post": {
        "summary": "플랫폼 매핑 생성 (배민/쿠팡 등)",
        "operationId": "createPlatform",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlatformRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "플랫폼 매핑 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatePlatformResponse"
                }
              }
            }
          },
          "400": {
            "description": "지원하지 않는 플랫폼명"
          },
          "401": {
            "description": "토큰 인증 실패"
          }
        }
      },
      "get": {
        "summary": "플랫폼 매핑으로 Store 찾기",
        "operationId": "readPlatform",
        "parameters": [
          {
            "name": "pf_name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pf_sid",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "해당 플랫폼 매핑이 가리키는 Store ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReadPlatformResponse"
                }
              }
            }
          },
          "404": {
            "description": "매핑 없음"
          }
        }
      }
    },

    "/api/allergy/infer": {
      "post": {
        "summary": "메뉴/옵션에 대한 알레르기 유발 물질 추론",
        "operationId": "inferAllergy",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InferAllergyRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "알레르기 코드 리스트 반환",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InferAllergyResponse"
                }
              }
            }
          },
          "400": {
            "description": "type 값 오류 (menu / option 이외)"
          },
          "401": {
            "description": "토큰 인증 실패"
          },
          "404": {
            "description": "ChatGPT API 오류 등"
          }
        }
      }
    },

    "/api/geo": {
      "get": {
        "summary": "도로명 주소로 좌표 조회 (Kakao API 래핑)",
        "operationId": "getLocationByRoadAddress",
        "parameters": [
          {
            "name": "road_address",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "좌표 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetLocationResponse"
                }
              }
            }
          },
          "404": {
            "description": "주소에 대한 좌표 없음"
          }
        }
      }
    },

    "/api/recommend": {
      "get": {
        "summary": "추천 메뉴 조회",
        "operationId": "getRecommends",
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "allergy_mask",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "추천 메뉴 리스트",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RecommendGetRecommendsResponse"
                }
              }
            }
          },
          "404": {
            "description": "추천 결과 없음 또는 내부 오류"
          }
        }
      }
    },

    "/api/recommend/order": {
      "post": {
        "summary": "주문 정보를 추천 시스템에 기록",
        "operationId": "createOrderForRecommend",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RecommendCreateOrderRequest"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "기록 성공 (No Content)"
          },
          "404": {
            "description": "등록 실패"
          }
        }
      }
    },

    "/api/recommend/user": {
      "post": {
        "summary": "추천 시스템 내 유저 생성",
        "operationId": "createRecommendUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RecommendCreateUserRequest"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "생성 성공 (No Content)"
          },
          "404": {
            "description": "생성 실패"
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "LoginOwnerRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["email", "password"]
      },
      "LoginOwnerResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "token": {
            "type": "string"
          }
        },
        "required": ["id", "token"]
      },

      "CreateOwnerRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["email", "password"]
      },
      "CreateOwnerResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "token": {
            "type": "string"
          }
        },
        "required": ["id", "token"]
      },

      "CreateStoreRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "integer",
            "format": "int64"
          },
          "road_address": {
            "type": "string"
          },
          "postal_code": {
            "type": "string"
          },
          "detail_address": {
            "type": "string"
          }
        },
        "required": ["name", "type", "road_address", "postal_code", "detail_address"]
      },
      "CreateStoreResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": ["id", "name", "type"]
      },

      "Allergy": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int64"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["code", "description"]
      },

      "OptionItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "integer",
            "format": "int64"
          },
          "allergies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Allergy"
            }
          }
        },
        "required": ["id", "name", "price"]
      },

      "OptionGroup": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "min_selected": {
            "type": "integer",
            "format": "int64"
          },
          "max_selected": {
            "type": "integer",
            "format": "int64"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OptionItem"
            }
          }
        },
        "required": ["id", "name", "min_selected", "max_selected"]
      },

      "Menu": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "integer",
            "format": "int64"
          },
          "price": {
            "type": "integer",
            "format": "int64"
          },
          "allergies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Allergy"
            }
          },
          "options": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OptionGroup"
            }
          }
        },
        "required": ["id", "name", "type", "price"]
      },

      "Store": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "integer",
            "format": "int64"
          },
          "road_address": {
            "type": "string"
          },
          "postal_code": {
            "type": "string"
          },
          "detail_address": {
            "type": "string"
          },
          "menus": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Menu"
            }
          }
        },
        "required": ["id", "name", "type", "road_address", "postal_code", "detail_address"]
      },

      "CreateMenuRequest": {
        "type": "object",
        "properties": {
          "store_id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "integer",
            "format": "int64"
          },
          "price": {
            "type": "integer",
            "format": "int64"
          },
          "allergies": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            },
            "description": "알레르기 코드 (0~21) 리스트"
          }
        },
        "required": ["store_id", "name", "type", "price"]
      },

      "CreateMenuResponse": {
        "type": "object",
        "properties": {
          "store_id": {
            "type": "integer",
            "format": "int64"
          },
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "integer",
            "format": "int64"
          },
          "price": {
            "type": "integer",
            "format": "int64"
          },
          "allergies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Allergy"
            }
          }
        },
        "required": ["store_id", "id", "name", "type", "price"]
      },

      "CreateOptionGroupRequest": {
        "type": "object",
        "properties": {
          "menu_id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          }
        },
        "required": ["menu_id", "name"]
      },
      "CreateOptionGroupResponse": {
        "type": "object",
        "properties": {
          "menu_id": {
            "type": "integer",
            "format": "int64"
          },
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "min_selected": {
            "type": "integer",
            "format": "int64"
          },
          "max_selected": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": ["menu_id", "id", "name", "min_selected", "max_selected"]
      },

      "CreateOptionItemRequest": {
        "type": "object",
        "properties": {
          "group_id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "integer",
            "format": "int64"
          },
          "allergies": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            }
          }
        },
        "required": ["group_id", "name", "price"]
      },

      "CreateOptionItemResponse": {
        "type": "object",
        "properties": {
          "group_id": {
            "type": "integer",
            "format": "int64"
          },
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "integer",
            "format": "int64"
          },
          "allergies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Allergy"
            }
          }
        },
        "required": ["group_id", "id", "name", "price"]
      },

      "CreatePlatformRequest": {
        "type": "object",
        "properties": {
          "store_id": {
            "type": "integer",
            "format": "int64"
          },
          "pf_name": {
            "type": "string"
          },
          "pf_sid": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": ["store_id", "pf_name", "pf_sid"]
      },

      "CreatePlatformResponse": {
        "type": "object",
        "properties": {
          "store_id": {
            "type": "integer",
            "format": "int64"
          },
          "pf_name": {
            "type": "string"
          },
          "pf_sid": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": ["store_id", "pf_name", "pf_sid"]
      },

      "ReadPlatformResponse": {
        "type": "object",
        "properties": {
          "store_id": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": ["store_id"]
      },

      "InferAllergyRequest": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "menu 또는 option"
          },
          "menu_name": {
            "type": "string"
          },
          "optin_group_name": {
            "type": "string",
            "description": "옵션 그룹명 (코드 상 JSON 키 오타 포함되어 있음)"
          },
          "option_item_name": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "description": "추가 설명"
          }
        },
        "required": ["type", "menu_name"]
      },

      "InferAllergyResponse": {
        "type": "object",
        "properties": {
          "allergies": {
            "type": "array",
